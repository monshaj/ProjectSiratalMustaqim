<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Zakat"
    android:layout_margin="35dp"
   >


    <TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="Gold"
    android:id="@+id/gold"
        android:textSize="25dp"
        android:textColor="#D4AF37"
        android:textStyle="bold"
        android:textAllCaps="true"
        android:textColorHighlight="#C5B358"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/goldInput"
        android:hint="Amount in Bori"
        android:layout_below="@id/gold"
        android:inputType="number"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/goldBoriPriceInput"
        android:hint="Bori price"
        android:layout_below="@id/goldInput"
        android:inputType="number"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Money"
        android:id="@+id/tk"
        android:layout_below="@id/goldBoriPriceInput"
        android:textSize="25dp"
        android:textColor="#0b8f2c"
        android:textStyle="bold"
        android:textAllCaps="true"
        android:textColorHighlight="#2d8b44"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tkInput"
        android:hint="Amount in money"
        android:layout_below="@id/tk"
        android:inputType="number"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Silver"
        android:id="@+id/silver"
        android:layout_below="@id/tkInput"
        android:textSize="25dp"
        android:textColor="#838383"
        android:textStyle="bold"
        android:textAllCaps="true"
        android:textColorHighlight="#808080"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/silverInput"
        android:hint="Amount in Bori"
        android:layout_below="@id/silver"
        android:inputType="number"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/silverBoriPriceInput"
        android:hint="Bori price"
        android:layout_below="@id/silverInput"
        android:inputType="number"/>






    <com.spark.submitbutton.SubmitButton
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/silverBoriPriceInput"
        android:layout_centerHorizontal="true"
        android:text="Submit"
        android:textColor="@color/gray"
        app:sub_btn_background="@color/white"
        app:sub_btn_duration="3000"
        app:sub_btn_line_color="#2c8b41"
        app:sub_btn_ripple_color="#2c8b41"
        app:sub_btn_tick_color="@color/white"
        android:id="@+id/submit"
        android:textAllCaps="true"/>



</RelativeLayout>